@model IEnumerable<ReservationApp.Models.Reservation>
<div class="container">
    <div class="table-responsive 	">
        <table class="table" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Room.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomType.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.From)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.To)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotallPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.From)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.To)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>

                            <img src="~/Image/icons8-us-dollar-26.png" />
                            @Html.DisplayFor(modelItem => item.TotallPrice)
                        </td>
                        <td>


                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-edit" }) |


                            <a href="@Url.Action("Delete", "Reservations",new { id = item.Id })" class="links">
                                <img src="@Url.Content("~/Image/icons8-delete-26.png")">

                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
